<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coordinateLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="net.redlinesoft.androidrobotbtjoypad.MainActivity">

        <ImageView
            android:id="@+id/ivUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/ivLeft"
            android:layout_toRightOf="@+id/ivLeft"
            android:src="@drawable/bg_stick_unpressed" />

        <ImageView
            android:id="@+id/ivLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ivUp"
            android:src="@drawable/bg_stick_unpressed" />

        <ImageView
            android:id="@+id/ivRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivUp"
            android:layout_toEndOf="@+id/ivUp"
            android:layout_toRightOf="@+id/ivUp"
            android:src="@drawable/bg_stick_unpressed" />

        <ImageView
            android:id="@+id/ivDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivLeft"
            android:layout_toEndOf="@+id/ivLeft"
            android:layout_toRightOf="@+id/ivLeft"
            android:src="@drawable/bg_stick_unpressed" />

        <ImageView
            android:id="@+id/ivB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/ivUp"
            android:layout_marginEnd="59dp"
            android:layout_marginRight="59dp"
            android:src="@drawable/bg_stick_unpressed" />

        <ImageView
            android:id="@+id/ivD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/ivRight"
            android:src="@drawable/bg_stick_unpressed" />

        <ImageView
            android:id="@+id/ivA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivD"
            android:layout_toLeftOf="@+id/ivB"
            android:layout_toStartOf="@+id/ivB"
            android:src="@drawable/bg_stick_unpressed" />

        <ImageView
            android:id="@+id/ivC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivDown"
            android:layout_toEndOf="@+id/ivA"
            android:layout_toRightOf="@+id/ivA"
            android:src="@drawable/bg_stick_unpressed" />

        <TextView
            android:id="@+id/txtResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ivB"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorBackground2" />

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
